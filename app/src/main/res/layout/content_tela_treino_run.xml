<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.usuario.a7minutesworkout.TelaTreinoRun"
    tools:showIn="@layout/activity_tela_treino_run"
    android:id="@+id/fundoViewTreino">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inicio"
        android:id="@+id/botaoInicio"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="clicaBotao"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Exercicio"
            android:id="@+id/textoExercicioAtual"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textSize="35dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="30"
            android:id="@+id/textoTempo"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textSize="35dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Próximo exercício"
            android:id="@+id/textoTituloProximoExercicio"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textSize="35dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Exercício"
            android:id="@+id/textoProximoExercicio"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textSize="35dp" />
    </LinearLayout>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarTreinoRun"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:indeterminate="false" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/imagemGym"
        android:src="@drawable/gymgym"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:alpha="0" />

</RelativeLayout>



